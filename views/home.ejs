<%- include("partials/header") %>
<div class="container flex justify-around w-full h-4/5">
  <div class="left-container w-1/2 m-4 flex items-center justify-center">
    <h3 class="text-3xl">Book your vaccine slot Now.</h3>
  </div>
  <div class="right-container w-1/2 m-4">
    <div class="book-slot flex justify-center w-full border-b-2">
      <form
        method="post"
        action="/"
        class="drop-down h-10 my-4 w-3/5 flex justify-around"
      >
        <select
          class="w-3/5 h-10 border-2 border-purple-500 rounded-3xl placeholder-purple-800 focus:outline-none px-4"
          name="vaccineCenter"
          id=""
        >
        <option  value="null">Select Center</option>
          <% centers.forEach(center => {%>
          <option class="list-disc mb-4 ml-4 capitalize text-lg">
            <%= center %>
          </option>
          <%}); %>
        </select>
        <button
          type="submit"
          class="book-btn border-2 rounded-lg border-purple-300 w-28"
        >
          Book Slot
        </button>
      </form>
    </div>
    <div class="vax-center border-2 h-4/5 text-xl">
      <p class="p-4 font-medium">List Of Centers</p>
      <ul class="lists p-5">
        <% centers.forEach(center => {%>
        <li class="list-disc mb-4 ml-4 capitalize text-lg"><%= center %></li>
        <%}); %>
      </ul>
    </div>
  </div>
</div>
<%- include("partials/footer") %>
